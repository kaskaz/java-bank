    <bean class="org.academiadecodigo.bootcamp.Prompt" id="prompt">
        <constructor-arg name="input">
            <bean class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
                <property name="staticField" value="java.lang.System.in"/>
            </bean>
        </constructor-arg>
        <constructor-arg name="output">
            <bean class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
                <property name="staticField" value="java.lang.System.out"/>
            </bean>
        </constructor-arg>
    </bean>

    <!-- Views -->
    <bean class="org.academiadecodigo.javabank.view.NewAccountView" id="newAccountView">
        <property name="newAccountController" ref="newAccountController"/>
    </bean>

    <bean class="org.academiadecodigo.javabank.view.LoginView" id="loginView">
        <property name="prompt" ref="prompt"/>
        <property name="loginController" ref="loginController"/>
    </bean>

    <bean class="org.academiadecodigo.javabank.view.MainView" id="mainView">
        <property name="prompt" ref="prompt"/>
        <property name="mainController" ref="mainController"/>
    </bean>

    <bean class="org.academiadecodigo.javabank.view.BalanceView" id="balanceView">
        <property name="balanceController" ref="balanceController"/>
    </bean>

    <bean class="org.academiadecodigo.javabank.view.AccountTransactionView" id="depositView">
        <property name="prompt" ref="prompt"/>
        <property name="transactionController" ref="depositController"/>
    </bean>

    <bean class="org.academiadecodigo.javabank.view.AccountTransactionView" id="withdrawalView">
        <property name="prompt" ref="prompt"/>
        <property name="transactionController" ref="withdrawalController"/>
    </bean>

</beans>