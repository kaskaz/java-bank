<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Enable support for JPA annotations -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:./src/main/resources/db/javabank"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <!-- Configure a persistence data source bean -->
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

    <!-- Configure an EntityManagerFactory bean -->
    <bean id="emFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="packagesToScan" value="org.academiadecodigo.javabank.model"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter"/>
        </property>
        <property name="jpaProperties">
            <map>
                <entry key="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
                <entry key="hibernate.show_sql" value="false" />
                <entry key="hibernate.hbm2ddl.auto" value="validate"/>
            </map>
        </property>
    </bean>

    <!-- Production data source using C3P0 connection pool -->
    <bean id="prodDB" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/bootcamp" />
        <property name="user" value="root" />
        <property name="password" value="root" />
        <property name="maxPoolSize" value="50" />
        <property name="minPoolSize" value="10" />
        <property name="maxStatements" value="100" />
        <property name="testConnectionOnCheckout" value="true" />
    </bean>




    <!-- Server -->
    <bean id="h2WebServer" class="org.academiadecodigo.javabank.persistence.H2WebServer"/>

    <!-- Data Access Objects -->
    <bean id="customerDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaCustomerDao">
        <constructor-arg ref="sessionManager"/>
    </bean>
    <bean id="accountDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaAccountDao">
        <constructor-arg ref="sessionManager"/>
    </bean>

    <!-- Managers -->
    <bean id="sessionManager" class="org.academiadecodigo.javabank.persistence.managers.jpa.JpaSessionManager"/>
    <bean id="transactionManager" class="org.academiadecodigo.javabank.persistence.managers.jpa.JpaTransactionManager">
        <constructor-arg ref="sessionManager"/>
    </bean>

</beans>